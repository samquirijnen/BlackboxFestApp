@page
@model RegisterModel
@{ ViewData["Title"] = "SIGN UP"; }
<body  class="backgroundLogin ColorGold">
<div class="mainBlock p-5">

    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="block p-2">
    
        <div>
            <div>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4 class="text-center">Create a new account.</h4>


                    <div class="form-group">

                        <input asp-for="Input.FirstName" class="form-control" placeholder="Firstname" style=" font-family:Verdana"/>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <input asp-for="Input.LastName" class="form-control" placeholder="Lastname" style=" font-family:Verdana"/>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <input asp-for="Input.UserName" class="form-control" placeholder="Username" style=" font-family:Verdana"/>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <input asp-for="Input.Email" class="form-control" placeholder="Email" style=" font-family:Verdana"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                  

                    <div class="form-group">

                        <input asp-for="Input.Password" class="form-control" placeholder="Password" style=" font-family:Verdana"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" style=" font-family:Verdana"/>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2 col-2 mx-auto">
                        <button type="submit" class="colorButton btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>