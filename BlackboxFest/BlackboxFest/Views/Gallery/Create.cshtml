@model BlackboxFest.ViewModels.GalleryViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4  class="d-flex justify-content-center ColorHeader m-5">Add photo's to Gallery</h4>

<div class="row d-flex justify-content-center ">
    <div class="col-md-4 m-5">
        <form asp-action="Create"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          

            <div class="form-group">
                <label asp-for="Gallery.ImageFile" class="control-label"></label>
                <input asp-for="Gallery.ImageFile" accept="image/*" onchange="previewFile()" />
                <img class="fotoAanpassen" src="@Html.DisplayFor(modelItem=>modelItem.Gallery.ImageName)" style="width:100%; height:auto" />
                <input type="hidden" asp-for="Gallery.ImageName" />

                <span asp-validation-for="Gallery.ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add to Gallery" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div class=" d-flex justify-content-center ">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
