@model BlackboxFest.Models.Gallery

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <h3 class="d-flex justify-content-center ">Are you sure you want to delete this?</h3>
    <hr />
    <div class="d-flex justify-content-center mb-5 ">

        <hr />

        <img class="card-img-top" style="width: 18rem;" src="@Html.DisplayFor(modelitem=> modelitem.ImageName)" />
        <hr />
    </div>
    <div class="d-flex justify-content-center ">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</body>
</html>
