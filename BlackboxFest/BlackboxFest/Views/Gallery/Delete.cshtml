@model BlackboxFest.Models.Gallery

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <h3 class="d-flex justify-content-center mb-5 ">Are you sure you want to delete this?</h3>

    <div class="d-flex justify-content-center mb-5 pt-5 row AchtergrondBlock">

        <div class="col-md-4"></div>
        <div class="col-md-4 pb-5">
            <img class="card-img-top" style="width: 18rem;" src="@Html.DisplayFor(modelitem=> modelitem.ImageName)" />
        </div>
        <div class="col-md-4"></div>
        <div class="d-flex justify-content-center pb-5 ">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
   
</body>
</html>
