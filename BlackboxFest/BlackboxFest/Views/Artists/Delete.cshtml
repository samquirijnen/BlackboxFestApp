@model BlackboxFest.Models.Artist

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/AdminPagina.css" />

</head>
<body>

    <h3 class="d-flex justify-content-center ">Are you sure you want to delete this?</h3>
    <h4 class="d-flex justify-content-center ">Artist</h4>
    <div class="d-flex justify-content-center row pb-5 AchtergrondBlock">


        <dl class="mt-5">
            <dt class="col-sm-2 ">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ArtistShortDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ArtistShortDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ArtistLongDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ArtistLongDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MusicGenre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MusicGenre)
            </dd>

            <dd class="col-sm-10 d-flex justify-content-center ">
                <!---Show the image-->
                <img src="@(Model.ImageName)" asp-append-version="true" alt="Image Artist" style="width:auto; height:auto;" />
            </dd>
        </dl>
        <div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</body>
</html>
