@model BlackboxFest.Models.Artist

@{
    Layout = "~/Views/Shared/_LayoutArtistUserView.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/userPagina.css" />
  
</head>
<body>
    <div class="mainBlock p-5">
        <h3 class="d-flex justify-content-center ColorGold"> @Html.DisplayFor(model => model.Name)</h3>
        <h3 class="d-flex justify-content-center ColorGold">@Html.DisplayFor(model => model.MusicGenre)</h3>
        <div class="row d-flex justify-content-center">
            <div class="m-3">
                <a asp-action="ArtistViewUser" class=" btn btn-secondary colorButton">Back to Artistlist</a>
            </div>
            <div class="m-3">
                <a asp-controller="Concert" asp-action="Day1TimeTable" class=" btn btn-secondary colorButton">Back to TimeTable</a>
            </div>
        </div>
        <div class="d-flex justify-content-center" enctype="multipart/form-data">

            <hr />

            <div class="row">
               
                <div class="col-sm-12 col-md-2 col-md-2">
                    <div class="card bg-dark text-white mb-5 " style="width: 18rem;height:18rem">


                        <a asp-action="Details" asp-route-id="@Model.Id" style="text-decoration: none;"> <img class="card-img-top"style="width: 18rem; height: 18rem" src="@Html.DisplayFor(modelitem => modelitem.ImageName)" /></a>

                        <div class="d-flex justify-content-around" style="background-color:black">

                        </div>
                    </div>
                </div>
                <div class=" col-sm-12 col-md-1 col-lg-1">

                </div>
                <div class="ml-5 col-sm-12 col-md-7 col-lg-7 colorTextLongDescription" style=" font-family:Verdana">
                    @Html.DisplayFor(model => model.ArtistLongDescription)
                </div>

            </div>

           



        </div>

    </div>
</body>
</html>
