@model BlackboxFest.Models.News

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <h3 class="d-flex justify-content-center">Are you sure you want to delete this?</h3>
    <h4 class="d-flex justify-content-center">News</h4>
    <div class="d-flex justify-content-center row pb-5 pt-5 AchtergrondBlock" >


        <dl>
            <dt class="col-sm-2" style="font-size:1.1rem">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2" style="font-size:1.1rem">
                @Html.DisplayNameFor(model => model.ShortDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShortDescription)
            </dd>
            <dt class="col-sm-2" style="font-size:1.1rem">
                @Html.DisplayNameFor(model => model.LongDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LongDescription)
            </dd>

            <dt class="col-sm-2" style="font-size:1.1rem">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2" style="font-size:1.1rem">
                @Html.DisplayNameFor(model => model.ImageName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImageName)
            </dd>
            <dt class="col-sm-2" style="font-size:1.1rem">
                Uploaded image
            </dt>
            <dd class="col-sm-10">
                <!---Show the image-->
                <img src="@(Model.ImageName)" asp-append-version="true" alt="Image Artist" style="width:18rem; height:auto;" />
            </dd>
        </dl>
        <div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</body>
</html>
