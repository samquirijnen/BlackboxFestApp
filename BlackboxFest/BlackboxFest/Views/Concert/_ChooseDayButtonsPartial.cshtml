@model BlackboxFest.ViewModels.ConcertViewModel

@if (User.IsInRole("Admin"))
{
    <div class="row d-flex justify-content-center mb-4" >


        <div>
            <form asp-controller="Concert" asp-action="Day1TimeTableAdmin" method="get">
                <div class="form-actions" >
                    <input type="submit" value="Day1" class=" ColorGold btn  " style="color:white"/>

                </div>
            </form>
        </div>
        <div>
            <form asp-controller="Concert" asp-action="Day2TimeTableAdmin" method="get">
                <div class="form-actions">
                    <input type="submit" value="Day2" class="  ColorGold btn " style="color:white"/>

                </div>
            </form>
        </div>
        <div>
            <form asp-controller="Concert" asp-action="Day3TimeTableAdmin" method="get">
                <div class="form-actions">
                    <input type="submit" value="Day3" class="  ColorGold btn " style="color:white"/>

                </div>
            </form>
        </div>

    </div>
}
else
{
    <div class="row d-flex justify-content-center mb-4 ColorWhite">


        <div>
            <form asp-controller="Concert" asp-action="Day1TimeTable" method="get">
                <div class="form-actions">
                    <input type="submit" value="Day1" class=" ColorGold btn  " />

                </div>
            </form>
        </div>
        <div>
            <form asp-controller="Concert" asp-action="Day2TimeTable" method="get">
                <div class="form-actions">
                    <input type="submit" value="Day2" class="  ColorGold btn " />

                </div>
            </form>
        </div>
        <div>
            <form asp-controller="Concert" asp-action="Day3TimeTable" method="get">
                <div class="form-actions">
                    <input type="submit" value="Day3" class="  ColorGold btn " />

                </div>
            </form>
        </div>

    </div>
}