@model BlackboxFest.ViewModels.TicketShopCartViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/userPagina.css" />
    @section Head
{
        <style>
            body {
                background-image: url("../images/background2.png");
            }
        </style>
    }
</head>
<body>
    @if (Model.ticketOrderDetails.Count() > 0)
    {


        <form method="post">
            <br />
            <div class="mainBlock p-5 ">
                <div class="d-flex justify-content-center ColorGold mb-5">
                   
                    <h3> Shopping Cart</h3>
                </div>
                <div class="container row" style="opacity:0.85">
                    <div class="col -8">
                        <div class="card mt-4">
                            <div class="card-header  text-light ml-0 row container">
                               
                               
                            </div>
                            <div class="card-body">
                                <div class=" d-none d-lg-block">
                                    <div class="row">

                                        <div class="col-12 col-lg-7  ColorGold">
                                            <h3> Product Details</h3>
                                        </div>
                                        <div class="col-12 col-lg-2  ColorGold">
                                            <h3>Price</h3>
                                        </div>
                                        <div class="col-lg-2">
                                        </div>
                                        <div class="col-6 col-sm-4 col-lg-1">
                                        </div>
                                    </div>
                                </div>

                                <hr />
                                @foreach (var item in Model.ticketOrderDetails)
                                {

                                    <div class="row h-100">

                                        <div class="col-8 col-lg-7  ColorGold">
                                            <h5>@item.Name</h5>

                                        </div>
                                        <div class="col-3 col-lg-2 pt-lg-4  ColorGold" style="font-size:11px;">
                                            <span style="font-size:17px;"> @item.Price €</span>

                                        </div>

                                        <div class="col-2 col-lg-1 p-0 pt-lg-4   text-center">
                                            <a asp-action="Remove" asp-route-id="@item.Id" class="btn">
                                                <img src="~/Images/Icon material-delete.png" asp-append-version="true" style="width:2em; height:2em;" />
                                            </a>

                                        </div>

                                    </div>
                                    <hr />
                                }
                              
                                <div class="row">
                                    <div class="col-12 col-lg-7 ColorGold">
                                        <h5> Total Tickets</h5>

                                    </div>
                                    <div class="col-12 col-lg-2  ColorGold">
                                        <h5> @Model.TotaalAantal €</h5>

                                    </div>
                                    <div class="col-lg-2">
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-1">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-6">
                                        <a asp-action="Index" asp-controller="TicketShopCart" class=" colorButton btn btn-secondary">Continue Shopping</a>
                                    </div>
                                   
                                    <div class="col-6 col-md-3">
                                        <a type="submit" asp-action="BuyView" class="colorButton btn btn-secondary">
                                            <span>Buy Ticket(s)</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <h2 class=" text-center" style="margin-top:20%">Your cart is empty</h2>
    }
</body>
</html >